@*@model MAPMA_WebClient.ServiceLayer.BookingService*@
<style>
    label.Booking{
        display: inline-block;
        width: 200px;
        float: left;
    }
    .indputs {
        display: inline-block;
        float: left;
    }
</style>

@*@{
    ViewBag.Title = "CreateBookingCheck";
}*@
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
<h2>Lav Booking</h2>

<link href="~/Content/Site.css" rel="stylesheet" />


<form method="post" action="@Url.Action("CreateBookingDone")">

    <label class="Booking">Brugernavn : </label> <input class="indputs" type="text" name="username" value="@Request.Cookies["User"].Value.ToString()" readonly /><br /><br />
    <label class="Booking">Escaperoom:</label><input class="indputs" type="text" name="name" value="@ViewBag.EscapeRoom.name" readonly /><br /><br />
    <label class="Booking">Den valgte dato :</label> <input class="indputs" type="text" name="BDate" value="@ViewBag.ChosenDate" readonly /><br /><br />
    <label class="Booking">Tider der kan vælges :</label><select class="indputs" data-bind="TimeSpan" name="BookTime">
        @foreach (TimeSpan item in ViewBag.freetimes) {
            <option value="@item">@item</option>
        }
    </select><br /><br />
    <label class="Booking">Antal personer:</label>  <input class="indputs" type="number" name="AmountOfPeople" required min="1" /><br /><br />
    <input class="Button" type="submit" value="book rum" onclick="@("window.location.herf='"+@Url.Action("GetAllEscapeRoom","EscapeRoom")+"'");" />
    <input type="text" name="escapeRoomID" value="@ViewBag.EscapeRoom.escapeRoomID" readonly hidden />
    <label hidden >Medarbejder nr:</label> <input type="text" name="EmployeeID" value="1" readonly hidden /><br /><br />
</form> 