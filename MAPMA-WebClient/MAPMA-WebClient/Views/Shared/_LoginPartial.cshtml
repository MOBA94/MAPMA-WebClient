@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    @if (@Session["User"] != null) {

        <li>@Html.ActionLink(@Request.Cookies["User"].Value, "GetAllBookingFromUser", "Customer", new {username = @Request.Cookies["User"].Value },new { @class = "CustomerController" })</li>
        <li>@Html.ActionLink("log ud", "Logout", "Customer") </li>
    }
    else {

        <li>@Html.ActionLink("Opret bruger", "FormulaRegister", "Customer", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Login", "Login", "Customer", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    }
</ul>
}
